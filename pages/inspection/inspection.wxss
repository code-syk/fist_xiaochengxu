/* pages/insp/insp1.wxss */
.page{
  padding: 0;
  margin: 0;
}
.page-body{
  height: 100vh;
  display: flex;
  text-align: center;
  flex-wrap: wrap;
}
.aside{
  height: 100vh;
  width: 30vw;
  background-color: rgb(40, 61, 80);
}
.weui-input{
  position: relative;
  border:1px solid;
  margin:8px;
  border-radius: 10px;
}
.item{
  flex: 1;
  position: relative;
}
.test_r{
  padding-top: 3%;
}
.the-item{
  height: 6vh;
  width: 30vw !important;
  margin-bottom: 2px;
  line-height: 6vh;
}
#sao_btn{
  margin: 0;
  padding:0;
  background-color: rgb(158, 217, 157);
  border-radius: 10px;
  height: 1.4rem;
  width: 2rem;
  font-size: 10px;
  position: absolute;
  top: 1px;
  right: 9px;
  z-index: 99;
}
.sao{
  line-height:1.4rem;
}
.the_photo{
  padding: 0;
  margin: 0;
  width: 70vw;
  height: 10vh;
  display: flex;
}
.item_img{
  border:1px solid black;
  height: 100%;
  flex:1;
  margin: 10px;
}